{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
    },
   "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "plugins": [
      { "transform": "typescript-transform-paths" },
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.d.ts",
],
}